CONFIG_SOC_SERIES_STM32L1X=y
CONFIG_SOC_STM32L151XB=y
CONFIG_CORTEX_M_SYSTICK=y

# enable uart driver
CONFIG_SERIAL=y

# enable console
CONFIG_LOG=y
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# enable GPIO
CONFIG_GPIO=y

# clock configuration
CONFIG_CLOCK_CONTROL=y

# Enable SPI to be able to communicate to the radio chip (cc1101).
CONFIG_SPI=y
CONFIG_SPI_STM32_USE_HW_SS=n

CONFIG_EEPROM=y

CONFIG_PWM=y

# enable pin controller
CONFIG_PINCTRL=y