CONFIG_SOC_SERIES_NRF52X=y
CONFIG_SOC_NRF52840_QIAA=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable RTT
CONFIG_USE_SEGGER_RTT=y

# enable GPIO
CONFIG_GPIO=y

# enable uart driver
CONFIG_SERIAL=y

# enable console and logging via RTT and UART
CONFIG_LOG=y
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y
CONFIG_RTT_CONSOLE=y

# Enable SPI to be able to communicate to the radio chip (cc1101).
CONFIG_SPI=y

# I2C is used by eeprom and pill
CONFIG_I2C=y
CONFIG_EEPROM=y
CONFIG_EEPROM_AT24=y

# Required to have smooth LED control
CONFIG_PWM=y

# ADC to measure battery level
CONFIG_ADC=y

# enable pin controller
CONFIG_PINCTRL=y