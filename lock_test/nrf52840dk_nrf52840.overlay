// Free pins to be used by the keyboard
&uart1 {
  status = "disabled";
};
// Free pins to be used by the keyboard
&spi1 {
  status = "disabled";
};

/ {
  keyboard {
    compatible = "gpio-keys";
    in1: in1 {
      gpios = <&gpio1 2 0>;
      label = "IN1";
    };

    in2: in2 {
      gpios = <&gpio1 3 0>;
      label = "IN2";
    };

    in3: in3 {
      gpios = <&gpio1 4 0>;
      label = "IN3";
    };

    out1: out1 {
      gpios = <&gpio1 5 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
      label = "OUT1";
    };

    out2: out2 {
      gpios = <&gpio1 6 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
      label = "OUT2";
    };

    out3: out3 {
      gpios = <&gpio1 7 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
      label = "OUT3";
    };

    out4: out4 {
      gpios = <&gpio1 8 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
      label = "OUT4";
    };
  };
};